<div id="main-content" class="container">
    <h2>Welcome Employee</h2>
    <div class="row">
        <h2>Rooms Allocation</h2>
        <h3> Type </h3>
        <br>
        <form onsubmit="roomAllocation()">
            <div class="form-group row">
                <label for="patentID" class="col-sm-2 col-form-label">Patient ID</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="patientID" placeholder="Enter Patient ID" pattern="[A-M]{1}[0-9]{6}" required>
                </div>
            </div>

            <div class="form-group row">
                <label for="rOutDate" class="col-sm-2 col-form-label">Expected Out Date</label>
                <div class="col-sm-10">
                  <input type="date" class="form-control" id="rOutDate" placeholder="Enter Expected Out Date" required>
                </div>
            </div>
            
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Allocate</button>
                </div>
            </div>
        </form>
        <br>
    </div>	
</div><!--End of #main-content -->