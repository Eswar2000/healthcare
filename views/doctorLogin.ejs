<div id="main-content" class="container">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <form  id="signin">
            <div class="form-group row">
                <label for="doctorID" class="col-sm-2 col-form-label">Doctor ID</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="doctorID" placeholder="Enter Doctor ID" pattern="[N-Z]{1}[0-9]{6}" required>
                </div>
            </div>

            <div class="form-group row">
                <label for="doctorPwd" class="col-sm-2 col-form-label">Doctor Password</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="doctorPwd" placeholder="Enter Doctor Password" pattern=".{8,}" title ="Check again, either the password is wrong or length is not satisfied" required>
                </div>
            </div>
            
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Sign in</button>
                </div>
            </div>
        </form>
    </div>
    <script>
        (() =>{
            document.getElementById("signin").style.display = "Block";
        })();
    </script>
</div><!--End of #main-content -->