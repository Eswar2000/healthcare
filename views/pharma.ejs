	<div id="main-content" class="container">

		<h2>Welcome Pharmacist</h2>
		<div class="container">
			<button type="button" id="supMed" class="btn btn-default" onclick="viewOrder()">Prescription</button>
			<br>
			<div id="supply">
				<form action="/pharma" method="POST">
					<div class="form-group row">
						<label for="patentID" class="col-sm-2 col-form-label">Patient ID</label>
						<div class="col-sm-10">
						  <input name="pID" type="text" class="form-control" id="patientID" placeholder="Enter Patient ID" pattern="[A-M]{1}[0-9]{6}" required>
						</div>
					</div>
					
					<div class="form-group row">
						<label for="dateIssue" class="col-sm-2 col-form-label">Date Issued</label>
						<div class="col-sm-10">
						  <input name="appDate" type="date" class="form-control" id="dateIssue" placeholder="Enter Date Issued" required>
						</div>
					</div>
					<div class="form-group row">
						<label for="timeIssue" class="col-sm-2 col-form-label">Time Issued</label>
						<div class="col-sm-10">
						  <input name="appTime" type="time" class="form-control" id="timeIssue" placeholder="Enter Time Issued" required>
						</div>
					</div>
					<div class="form-group row">
						<div class="col-sm-10">
							<button type="button" id="issued" onclick="viewPresc()" class="btn btn-primary">Get Prescription</button>
						</div>
					</div>
				</form>
			</div>
			<br>	
			<div id = "presTable">
					
			</div>
		</div>
	</div><!--End of #main-content -->

