        <div id="main-content" class="container">
            <form  onsubmit="addStock()" action="/addToStock" method="POST">
                <div class="form-group row">
                    <label for="drugName" class="col-sm-2 col-form-label">Medicine Name</label>
                    <div class="col-sm-10">
                    <input name= "drugName" type="text" class="form-control" id="drugName" placeholder="Enter Medicine Name" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="drugPrice" class="col-sm-2 col-form-label">Medicine Price</label>
                    <div class="col-sm-10">
                    <input name="drugPrice" type="number" step="0.01" class="form-control" id="drugPrice" placeholder="Enter Medicine Price" pattern="[0-9]" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="drugCount" class="col-sm-2 col-form-label">Medicine Count</label>
                    <div class="col-sm-10">
                    <input type="number" name="drugCount" class="form-control" id="drugCount" placeholder="Enter Medicine Count" pattern="[0-9]" required>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="form-group col-sm-6">
                        <label for="drugMfDate" class="control-label">Manufacture Date</label>
                        <input type="date" name="drugMfDate" class="form-control" id="drugMfDate" placeholder="Enter Manufacture Date" required> 
                    </div>
                    <div class="form-group col-sm-6">
                        <label for="drugExpDate" class="control-label">Expiry Date</label>
                        <input type="date" name="drugExpDate" class="form-control" id="drugExpDate" placeholder="Enter Expiry Date" required>
                    </div>
                    <div id='status'><%=drugMsg%></div>
                </div>
                <button type="submit" class="btn btn-primary" value="Submit">Add</button>
            </form>
            <br>
            <form action="/employeeHome" method="GET">
                <button type="submit" class="btn btn-primary">Return</button>
            </form>
            
        </div><!--End of #main-content -->

